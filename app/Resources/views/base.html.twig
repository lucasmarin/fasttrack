<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}fasttrack mandic{% endblock %}</title>
        {% block stylesheets %}
          {% stylesheets
              '@MandicFastTrackBundle/Resources/public/bootstrap/css/bootstrap.min.css'
              '@MandicFastTrackBundle/Resources/public/bootstrap/css/bootstrap-responsive.min.css'
              '@MandicFastTrackBundle/Resources/public/css/main.css'
            filter='cssrewrite'
          %}
              <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
          {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="#">mandic:Fasttrack</a>
          <div class="nav-collapse collapse">
              {% block username %}
              {% endblock %}
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>
    <div class="container">
     {% block body %}
     {% endblock %}
    </div>
    <div class="container">
      <hr>
      <footer>
        <p>&copy; Mandic 2012</p>
      </footer>
    </div> 
      {% block javascripts %}
        {% javascripts 
            '@MandicFastTrackBundle/Resources/public/jquery/jquery-1.8.2.min.js'
            '@MandicFastTrackBundle/Resources/public/bootstrap/js/bootstrap.min.js' 
        %}
            <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}
      {% endblock %}
    </body>
</html>
